<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme By Default-->
    <style name="LightTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightPrimaryDark</item>
        <item name="colorAccent">@color/lightAccent</item>
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="colorButtonNormal">@color/lightButtonBackground</item>
        <item name="android:textColorAlertDialogListItem">@color/lightText</item>
        <item name="android:itemBackground">@color/lightBackground</item>
        <item name="android:tint">@color/lightText</item>
        <item name="radioButtonStyle">@style/LightThemeRadio</item>
        <item name="actionBarTheme">@style/LightAppBar</item>
        <item name="colorBackgroundFloating">@color/lightBackground</item>
    </style>

    <style name="LightThemeRadio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/lightText</item>
    </style>

    <style name="LightAppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/lightText</item>
        <item name="android:textColorSecondary">@color/lightText</item>
    </style>

